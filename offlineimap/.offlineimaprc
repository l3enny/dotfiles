[general]
accounts = PersonalGmail, PublicGmail, Wetwares
metadata = ~/.offlineimap
# set equal to number of accounts to accomodate autorefresh
maxsyncaccounts = 3
# switch ui upon automation
ui = Blinkenlights
# let's not go on forever, shall we?
socktimeout = 60

[mbnames]
# Mutt-specific local mailbox settings, check and enable
enabled = no
filename = ~/Mutt/muttrc.mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account PersonalGmail]
localrepository = Local
remoterepository = Remote

[Account PublicGmail]
localrepository = Local
remoterepository = Remote

[Account Wetwares]
localrepository = Local
remoterepository = Remote

[Repository Local]
type = Maildir
localfolders = ~/Test

[Repository PersonablGmail]
type = gmail
remotehost = examplehost
remoteuser = bentyee

[Repository PublicGmail]
type = gmail
remotehost = examplehost
remoteuser = l3enny
